<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vue_principale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a.webview.VuePrincipaleActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logoapp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/alarmeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Détection "
        android:splitTrack="false"
        android:switchMinWidth="50dp"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:checked="false"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/alarmeSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/labelHttpStatus"
        android:layout_above="@+id/bCamera"
        android:layout_alignEnd="@+id/alarmeSwitch"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/bCamera"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@+id/httpStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Alarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bCamera"
        android:layout_alignLeft="@+id/bCamera"
        android:layout_alignStart="@+id/bCamera"
        android:id="@+id/bAlarme"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bAlarme"
        android:id="@+id/bData"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="C°  %  hPa"
        android:background="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/background_light"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:text="Deconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bDeconnexion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <TextView
        android:text="TextView"
        android:layout_height="30dp"
        android:id="@+id/httpStatus"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/switchStatus"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/switchStatus"
        android:layout_width="wrap_content" />

</RelativeLayout>